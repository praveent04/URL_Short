# Environment Variables Template
# Copy this file to .env and update with your actual values

# Domain Configuration
DOMAIN=ynit.com
PORT=3000

# Redis Configuration
DB_ADDR=your-redis-host
DB_PORT=your-redis-port
DB_PASS=your-redis-password
DB_USER=your-redis-username

# PostgreSQL Configuration
DB_HOST_PG=your-postgres-host
DB_PORT_PG=5432
DB_USER_PG=your-postgres-user
DB_PASS_PG=your-postgres-password
DB_NAME=your-database-name

# Email Configuration (Optional - for expiration notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=YNIT URL Shortener

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-here
